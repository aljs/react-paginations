@import "variables";

.table-pagination {

    &.pull-right {
        float: right;
    }
    
    .table-pagination-block {
        margin-left: 8px;
        margin-right: 8px;

        > div {
            margin-top: 8px;
            margin-bottom: 8px;
            margin-left: 8px;
            margin-right: 8px;
            float: left;
        }
        .pagination {
            vertical-align: top;
        }
        .pagination-records {
            color: #666666;
            margin-top: 14px;
            margin-bottom: 14px;
        }
        .pagination-records + .dropdown{
            border-left: 1px solid #dddddd;
        }
        .dropdown {
            padding-left: 16px;
            margin-top: 14px;
            margin-bottom: 14px;

            .btn {
                border-left: 0;
                border-right: 0;
                color: #666666;
                text-decoration: none;

                &:hover {
                    color: $link-color;
                }

                .caret {
                    margin-left: 8px;
                }
            }
        }

        .pagination-input {
            color: #666666;

            input {
                vertical-align: baseline;
                margin: 0;
                min-width: 24px;
                padding: 5px 4px;
                text-align: center;
                border: 1px solid #ccc;
                border-radius: 3px;
            }
        }
    }
}
